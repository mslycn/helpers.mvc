@model Helpers.Website.Models.BasicPersonView

<div class="page-header">
    <h1><code>&lt;display&gt;</code> </h1>
    <p>An alternative to the Html Helper <code>Html.DisplayFor()</code>.</p>
</div>

<h2>Usage</h2>
<code>&lt;display [Options] /&gt;</code>

<h2>Options</h2>
<table class="table table-responsive table-bordered table-striped">
    <tr>
        <th></th>
        <th>Attribute</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
    </tr>
    <tbody>
        <tr>
            <td><a href="#for"><i class="fa fa-link"></i></a></td>
            <td>asp-for</td>
            <td>string</td>
            <td>n/a</td>
            <td>An expression to be evaluated against the current model.</td>
        </tr>
    </tbody>
</table>


<!-- FOR -->


<div id="for" class="page-header">
    <h2>For</h2>
</div>

<div class="bs-callout">
    <h4>Show the value with any annotations applied</h4>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <display asp-for="Email"></display>
    </div>
    <div class="panel-footer">
        <h5><small>markup</small></h5>
        <pre class="prettyprint">
&lt;display asp-for="Email" /&gt;
</pre>
        <h5><small>template</small></h5>
        <pre class="prettyprint">
@@model string
&lt;a href="mailto:@@Model"&gt;&lt;i class="fa fa-envelope"></i> @@Model.ToLower()</a>
</pre>
        <h5><small>model</small></h5>
        <pre class="prettyprint">
public class BasicPersonView
{
    [UIHint("MailTo")]
    public string Email { get; set; }
}
</pre>
    </div>
</div>
